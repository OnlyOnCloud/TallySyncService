{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "TallySyncService": "Debug"
    }
  },
  "Tally": {
    "BaseUrl": "http://localhost:9000",
    "TimeoutSeconds": 60,
    "ConfigFilePath": "tally-export-config.yaml",
    "Company": "Onlyoncloud"
  },
  "TallySync": {
    "TallyUrl": "http://localhost:9000",
    "BackendUrl": "https://dhub-backend-dev.onlyoncloud.com",
    "BackendSyncEndpoint": "/api/data/upload",
    "BackendHealthEndpoint": "/api/health",
    "SyncIntervalMinutes": 15,
    "TallyTimeoutSeconds": 60,
    "BackendTimeoutSeconds": 90,
    "MaxRetryAttempts": 3,
    "DataDirectory": "./exports",
    "ChunkSize": 100,
    "InitialSyncDaysBack": 365,
    "RequireAuthentication": true,
    "SyncMode": "FULL",
    "KeepCsvFiles": true
  }
}
